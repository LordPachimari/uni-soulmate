    "lint": "biome lint src",
    "beautify": "biome format ./src --write"
  },
  "dependencies": {
    "@acme/api": "workspace:*",
    "@acme/db": "workspace:*",
    "@acme/validators": "workspace:*",
    "@t3-oss/env-nextjs": "^0.10.0",
    "geist": "^1.3.0",
    "next": "^14.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@biomejs/biome": "1.7.2",
    "@types/node": "^20.12.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "dotenv-cli": "^7.4.1",
    "jiti": "^1.21.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
